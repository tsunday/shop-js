<div class="row">
  <div class="col-sm-6 col-md-4" ng-repeat="datalist in datalists | limitTo: paginationLimit()">
    <div class="thumbnail">
      <img src="{[{datalist.imagePath}]}" alt="{[{datalist.title}]}" class="img-responsive">
      <div class="caption">
        <h3>{[{datalist.title}]}</h3>
        <p>{[{datalist.description}]}</p>
        <div class="clearfix">
        <p><div class="price">{[{datalist.price}]}$</div> <a href="/add-to-cart/1" class="btn btn-success pull-right" role="button">Kup teraz!</a></p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="pagination pagination-centered">
    <button class="show-more-btn" ng-show="hasMoreItemsToShow()" ng-click="showMoreItems()">WiÄ™cej</button>
</div>